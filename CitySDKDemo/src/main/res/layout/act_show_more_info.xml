<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:background="#E0E0E0"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/act_show_more_info_text_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#f26522"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <ScrollView
        android:background="#E0E0E0"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:background="#E0E0E0"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="fill_parent"
                android:layout_height="400dp"
                android:background="#E0E0E0"/>

            <TextView
                android:id="@+id/act_show_more_info_text_image_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingRight="10dp"
                android:text=""/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp">



                <LinearLayout
                    android:id="@+id/act_show_more_info_text_category_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/bg_card"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/act_show_more_info_text_category_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:text="@string/categories"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <View
                        android:id="@+id/act_show_more_info_text_category_sep"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"/>


                    <TextView
                        android:id="@+id/act_show_more_info_text_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="8dp"
                        android:textColor="#f26522"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/act_show_more_info_text_contacts"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/bg_card"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/act_show_more_info_text_contacts_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:text="@string/contacts"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <View
                        android:id="@+id/act_show_more_info_text_contacts_sep"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"/>

                    <LinearLayout
                        android:id="@+id/act_show_more_info_text_contacts_rel"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/act_show_more_info_text_contactos_tel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:text="@string/phone"
                                android:textSize="16sp"/>

                            <TextView
                                android:id="@+id/act_show_more_info_text_contactos_tel_input"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/act_show_more_info_text_contactos_tel"
                                android:autoLink="phone"
                                android:text=""
                                android:textSize="16sp"/>
                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/act_show_more_info_text_contactos_mail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:text="@string/mail"
                                android:textSize="16sp"/>

                            <TextView
                                android:id="@+id/act_show_more_info_text_contactos_mail_input"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/act_show_more_info_text_contactos_mail"
                                android:autoLink="email"
                                android:text=""
                                android:textSize="16sp"/>
                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/act_show_more_info_text_contactos_url"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:text="@string/url"
                                android:textSize="16sp"/>

                            <TextView
                                android:id="@+id/act_show_more_info_text_contactos_url_input"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/act_show_more_info_text_contactos_url"
                                android:autoLink="web"
                                android:text=""
                                android:textSize="16sp"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/act_show_more_info_text_contactos_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:text="@string/address"
                                android:textSize="16sp"/>

                            <TextView
                                android:id="@+id/act_show_more_info_text_contactos_address_input"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/act_show_more_info_text_contactos_address"
                                android:text=""
                                android:textSize="16sp"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/act_show_more_info_text_sch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/bg_card"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/act_show_more_info_text_schedule_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:text="@string/workhour"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"/>

                    <RelativeLayout
                        android:id="@+id/act_show_more_info_text_start_end"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/act_show_more_info_text_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="@string/since"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/act_show_more_info_text_start_input"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/act_show_more_info_text_start"
                            android:layout_toRightOf="@+id/act_show_more_info_text_start"
                            android:text=""
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/act_show_more_info_text_end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/act_show_more_info_text_start"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="@string/until"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/act_show_more_info_text_end_input"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/act_show_more_info_text_end"
                            android:layout_toRightOf="@+id/act_show_more_info_text_end"
                            android:text=""
                            android:textSize="16sp"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/act_show_more_info_text_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="15dp"
                        android:text=""
                        android:textSize="16sp"
                        android:visibility="gone"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/act_show_more_info_text_desc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/act_show_more_info_text_description_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:text="@string/description"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"/>

                    <TextView
                        android:id="@+id/act_show_more_info_text_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="10dp"
                        android:text=""
                        android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>